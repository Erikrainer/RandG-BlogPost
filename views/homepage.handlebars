<div class="blogpost-container">
    {{#each blogposts as |blogpost|}}
    <div class="blogPost">
        <div class="blogHeader">
        <h2 class="blogTitle">
            {{blogpost.title}}.
        </h2>
        <div class="blogUser">
        <p>
            Posted by: {{blogpost.user_username}} on {{format_date blogpost.createdAt}}
        </p>
        </div>
    </div>
        <p class="blogText">
            {{blogpost.text}}
        </p>
        <p></p>
    <div class="commentTitle">
        {{#if blogpost.comments.length}}{{else}} ðŸ’¬: No comments {{/if}}
    </div>
